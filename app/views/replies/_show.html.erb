<div class="cse-divider"></div>
<div class="cse-reply-body">
<div class="row-fluid">
	<div class="span2">
		<%= get_avatar(reply.user, 'medium') %>
	</div>
	<div class="span10">
		<div class="row-fluid">
			<%= link_to reply.user.username, reply.user, class: 'cse-username' %><small class="muted"><%= reply.user.mood.present? ? " (#{reply.user.mood})" : "" %></small><span class="divider">â€¢</span><span class="muted"><%=  time_ago_in_words(reply.created_at)%></span><span class="badge badge-important pull-right"><%= reply.index %></span>
		</div>
		<div class="row-fluid">
			<%= simple_text(reply.body) %>
		</div>
	</div>
</div>
<% if user_signed_in? %>
<div class="row-fluid">
	<%= link_to(image_tag('reply.png', class: 'pull-right'), 'javascript:void(0)', class: 'cse-btn-reply') %>
</div>
<% end %>
</div>